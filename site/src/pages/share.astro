---
import BaseLayout from '../layouts/BaseLayout.astro'
---

<BaseLayout
  title="Import Shortcuts — Shortkeys"
  description="Import shared keyboard shortcuts into Shortkeys."
  showHeader={false}
  showFooter={false}
>
  <style>
    body {
      background: #f8fafc;
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      padding: 24px;
    }
    .card {
      background: #fff;
      border-radius: 16px;
      box-shadow: 0 4px 24px rgba(0,0,0,0.08);
      max-width: 600px;
      width: 100%;
      padding: 40px;
      text-align: center;
    }
    .icon { font-size: 48px; margin-bottom: 16px; }
    h1 { font-size: 24px; font-weight: 800; margin-bottom: 8px; }
    .desc { color: #64748b; margin-bottom: 24px; font-size: 15px; }
    .shortcut-list {
      text-align: left;
      background: #f8fafc;
      border: 1px solid #e2e8f0;
      border-radius: 10px;
      padding: 12px;
      margin-bottom: 24px;
      max-height: 300px;
      overflow-y: auto;
    }
    .shortcut-row {
      display: flex;
      justify-content: space-between;
      padding: 6px 8px;
      font-size: 13px;
      border-radius: 4px;
    }
    .shortcut-row:nth-child(odd) { background: #fff; }
    .shortcut-key {
      font-family: 'SF Mono', Menlo, monospace;
      color: #4361ee;
      font-weight: 600;
    }
    .actions { display: flex; gap: 12px; justify-content: center; }
    .share-btn {
      padding: 12px 28px;
      border-radius: 10px;
      font-size: 15px;
      font-weight: 600;
      cursor: pointer;
      border: none;
      display: inline-flex;
      align-items: center;
      gap: 6px;
      text-decoration: none;
    }
    .share-btn-primary { background: #4361ee; color: #fff; }
    .share-btn-primary:hover { background: #3730a3; }
    .share-btn-secondary { background: #fff; color: #64748b; border: 1px solid #e2e8f0; }
    .error { color: #ef4444; }
    .copy-json {
      margin-top: 16px;
      font-size: 12px;
      color: #94a3b8;
    }
    .copy-json a { color: #4361ee; cursor: pointer; }
  </style>

  <div class="card" id="card">
    <div class="icon">⌨️</div>
    <h1>Shared Shortcuts</h1>
    <p class="desc" id="desc">Loading...</p>
    <div class="shortcut-list" id="shortcut-list" style="display:none"></div>
    <div class="actions" id="actions"></div>
    <div class="copy-json" id="copy-json" style="display:none">
      Or <a onclick="copyJson()">copy the JSON</a> and paste it in the Import tab.
    </div>
  </div>

  <script is:inline>
    let shortcutsData = null

    try {
      const hash = window.location.hash.slice(1)
      if (!hash) throw new Error('No data')
      const json = decodeURIComponent(escape(atob(hash)))
      shortcutsData = JSON.parse(json)
      if (!Array.isArray(shortcutsData)) shortcutsData = [shortcutsData]

      document.getElementById('desc').textContent = `${shortcutsData.length} shortcut${shortcutsData.length !== 1 ? 's' : ''} ready to import`

      const list = document.getElementById('shortcut-list')
      list.style.display = 'block'
      list.innerHTML = shortcutsData.map(s => `
        <div class="shortcut-row">
          <span>${s.label || s.action || 'Shortcut'}</span>
          <span class="shortcut-key">${s.key || '\u2014'}</span>
        </div>
      `).join('')

      // Try to detect the extension - Chrome Web Store ID or local dev
      const STORE_ID = 'logpjaacgmcbpdkdchjiaagddngobkck'

      document.getElementById('actions').innerHTML = `
        <button class="share-btn share-btn-primary" id="import-btn" onclick="importToExtension()">
          <span style="display:inline-flex;align-items:center;gap:6px">\u2B07\uFE0F Import ${shortcutsData.length} shortcut${shortcutsData.length !== 1 ? 's' : ''}</span>
        </button>
        <button class="share-btn share-btn-secondary" onclick="copyJson()">Copy JSON</button>
      `

      document.getElementById('copy-json').style.display = 'block'

      function importToExtension() {
        const btn = document.getElementById('import-btn')
        btn.disabled = true
        btn.innerHTML = 'Importing...'

        // Try sending to the extension
        if (typeof chrome !== 'undefined' && chrome.runtime && chrome.runtime.sendMessage) {
          chrome.runtime.sendMessage(STORE_ID, {
            action: 'importShortcuts',
            shortcuts: shortcutsData
          }, response => {
            if (chrome.runtime.lastError || !response?.success) {
              showFallback(btn)
              return
            }
            btn.innerHTML = `\u2713 Imported ${response.count} shortcuts!`
            btn.style.background = '#059669'
          })
        } else {
          showFallback(btn)
        }
      }

      function showFallback(btn) {
        // Silently copy JSON and show success
        copyJson()
        btn.innerHTML = '\u2713 Copied!'
        btn.style.background = '#059669'
        setTimeout(() => {
          btn.innerHTML = `\u2B07\uFE0F Import ${shortcutsData.length} shortcut${shortcutsData.length !== 1 ? 's' : ''}`
          btn.style.background = ''
          btn.disabled = false
        }, 3000)
      }
    } catch (e) {
      document.getElementById('desc').innerHTML = '<span class="error">Invalid or missing shortcut data in this link.</span>'
      document.getElementById('actions').innerHTML = `
        <a class="share-btn share-btn-secondary" href="/">\u2190 Back to Shortkeys</a>
      `
    }

    function copyJson() {
      if (shortcutsData) {
        navigator.clipboard.writeText(JSON.stringify(shortcutsData, null, 2))
        document.getElementById('copy-json').innerHTML = '\u2713 Copied to clipboard!'
      }
    }
  </script>
</BaseLayout>
