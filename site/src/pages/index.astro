  <script is:inline>
    let catalogData = null
    const MAX_FEATURED_PACKS = 6

    // Load catalog
    fetch('/catalog.json')
      .then(r => r.json())
      .then(data => {
        catalogData = data
        renderPacks(data.packs.slice(0, MAX_FEATURED_PACKS))
      })
      .catch(() => {
        document.getElementById('pack-grid').innerHTML = '<p style="color:var(--gray);text-align:center;grid-column:1/-1;">Failed to load packs. <a href="https://github.com/crittermike/shortkeys">View on GitHub</a></p>'
      })

    function renderPacks(packs) {
      const grid = document.getElementById('pack-grid')
      grid.innerHTML = packs.map(pack => `
        <div class="pack-card" onclick="showPackModal('${pack.id}')" style="--accent:${pack.color}">
          <div class="pack-icon">${pack.icon}</div>
          <div class="pack-title">${pack.name}</div>
          <div class="pack-desc">${pack.description}</div>
          <div class="pack-footer">
            <span class="pack-count"><i class="mdi mdi-keyboard-outline"></i> ${pack.shortcutCount} shortcuts</span>
            <button class="btn-add" onclick="event.stopPropagation();showPackModal('${pack.id}')">
              Preview
            </button>
          </div>
        </div>
      `).join('')
    }

    function showPackModal(packId) {
      const pack = catalogData.packs.find(p => p.id === packId)
      if (!pack) return

      document.getElementById('modal-icon').textContent = pack.icon
      document.getElementById('modal-title').textContent = pack.name
      document.getElementById('modal-desc').textContent = pack.description
      document.getElementById('modal-header').style.background = pack.color

      document.getElementById('modal-body').innerHTML = pack.shortcuts.map(s => `
        <div class="modal-row">
          <span class="modal-row-label">${s.label}</span>
          <span class="modal-row-keys">
            ${s.key.split('+').map(k => `<kbd>${k}</kbd>`).join('')}
          </span>
        </div>
      `).join('')

      document.getElementById('modal-install-btn').onclick = () => {
        window.open('https://chromewebstore.google.com/detail/shortkeys-custom-keyboard/logpjaacgmcbpdkdchjiaagddngobkck', '_blank')
      }

      document.getElementById('modal-overlay').classList.add('active')
    }

    function closeModal() {
      document.getElementById('modal-overlay').classList.remove('active')
    }

    document.addEventListener('keydown', e => { if (e.key === 'Escape') closeModal() })

    function toggleCategory(btn) {
      const category = btn.closest('.action-category')
      const list = category.querySelector('.action-list')
      const isOpen = category.classList.toggle('open')
      list.hidden = !isOpen
    }

    function generateShareLink() {
      const input = document.getElementById('share-input')
      const result = document.getElementById('share-result')
      try {
        const data = JSON.parse(input.value)
        const encoded = btoa(unescape(encodeURIComponent(JSON.stringify(data))))
        const url = `${window.location.origin}/share#${encoded}`
        result.innerHTML = `<a href="${url}" target="_blank" style="color:#60a5fa;word-break:break-all">${url}</a><br><small style="display:block;margin-top:8px;color:#94a3b8;">Share this link. Anyone with Shortkeys can import it.</small>`
        navigator.clipboard.writeText(url).catch(() => {})
      } catch {
        result.textContent = 'Invalid JSON. Export your shortcuts from the extension and paste them here.'
        result.style.color = '#ef4444'
      }
    }
  </script>
