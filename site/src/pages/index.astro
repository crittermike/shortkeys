          <div class="action-item">Move to first</div>
          <div class="action-item">Move to last</div>
          <div class="action-item">Sort alphabetically</div>
          <div class="action-item">Suspend tab</div>
          <div class="action-item">Add to group</div>
          <div class="action-item">Remove from group</div>
        </div>
      </div>
      <div class="action-category" data-category="Windows">
        <button class="action-category-header" onclick="toggleCategory(this)">
          <span>Windows <span class="action-count">4 actions</span></span>
          <i class="mdi mdi-chevron-down action-chevron"></i>
        </button>
        <div class="action-list" hidden>
          <div class="action-item">New window</div>
          <div class="action-item">New private window</div>
          <div class="action-item">Close window</div>
          <div class="action-item">Toggle fullscreen</div>
        </div>
      </div>
      <div class="action-category" data-category="Zoom">
        <button class="action-category-header" onclick="toggleCategory(this)">
          <span>Zoom <span class="action-count">3 actions</span></span>
          <i class="mdi mdi-chevron-down action-chevron"></i>
        </button>
        <div class="action-list" hidden>
          <div class="action-item">Zoom in</div>
          <div class="action-item">Zoom out</div>
          <div class="action-item">Reset zoom</div>
        </div>
      </div>
      <div class="action-category" data-category="Bookmarks">
        <button class="action-category-header" onclick="toggleCategory(this)">
          <span>Bookmarks <span class="action-count">5 actions</span></span>
          <i class="mdi mdi-chevron-down action-chevron"></i>
        </button>
        <div class="action-list" hidden>
          <div class="action-item">Open bookmark (current tab)</div>
          <div class="action-item">Open in new tab</div>
          <div class="action-item">Open in background tab</div>
          <div class="action-item">Open in bg tab and close</div>
          <div class="action-item">Toggle bookmark</div>
        </div>
      </div>
